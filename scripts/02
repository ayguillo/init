#!/bin/bash

read -p "entrer un nom d'utilisateur a supprimer : " userdel

if [ -n "$(who | grep $userdel)" ]
then
	read -p "User $userdel delete ? Confirm whit o/n : " confirm
	if [ "$confirm" == "o" ]
	then
		passwd -l $userdel
		killall -KILL -u $userdel;
		userdel -r $userdel
	else
		echo "Process abort"
	fi
else
	echo "User does not exist or not connect"
fi
